@model AcademiaDHub.Models.Class
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Class</h2>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Class Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ClassName" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Class" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
